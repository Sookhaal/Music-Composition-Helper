				<RowDefinition Height="11*"/>
				<RowDefinition Height="11*"/>
				<RowDefinition Height="6*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="48*"/>
				<ColumnDefinition Width="50*"/>
				<ColumnDefinition Width="50*"/>
				<ColumnDefinition Width="50*"/>
				<ColumnDefinition Width="50*"/>
				<ColumnDefinition Width="50*"/>
				<ColumnDefinition Width="50*"/>
				<ColumnDefinition Width="50*"/>
